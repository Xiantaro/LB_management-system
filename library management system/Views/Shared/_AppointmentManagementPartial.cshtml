<!-- 主內容 START -->
<div class="row mt-1">
    <div class="col">
        <!-- 搜尋 START-->
        <form method="post" asp-action="Query" class="d-flex justify-content-between align-items-end flex-wrap gap-3">
            <!-- 查詢表單欄位 -->
            <div class="d-flex flex-wrap gap-3">
                <div>
                    <label class="form-label mb-0">借閱人ID：</label>
                    <input type="text" class="form-control form-control-sm" name="borrowerId" />
                </div>
                <div>
                    <label class="form-label mb-0">書籍編號：</label>
                    <input type="text" class="form-control form-control-sm" name="bookId" />
                </div>
                <div>
                    <label class="form-label mb-0">日期範圍</label>
                    <input type="date" class="form-control form-control-sm"/>
                </div>
                <div>
                    <label class="form-label mb-0">至</label>
                    <input class="form-control form-control-sm" type="date" />
                </div>
                <div class="align-self-end">
                    <button type="submit" class="btn btn-primary btn-lg">查詢</button>
                </div>
            </div>
            <!-- 排序三兄弟 START-->
            <div class="d-flex flex-wrap gap-3">
                <div>
                    <label class="form-label mb-0">顯示數量：</label>
                    <select class="form-select form-select-sm" name="sortDir">
                        <option value="text">10</option>
                        <option value="twenty">20</option>
                        <option value="thrity">30</option>
                    </select>
                </div>
                <!-- 排序依據 -->
                <div>
                    <label class="form-label mb-0">狀態：</label>
                    <select class="form-select form-select-sm" name="orderBy">
                        <option value="borrowDate">借出</option>
                        <option value="dueDate">等待</option>
                        <option value="returnDate">取消</option>
                    </select>
                </div>

                <!-- 排序方向 -->
                <div>
                    <label class="form-label mb-0">預約日期：</label>
                    <select class="form-select form-select-sm" name="sortDir">
                        <option value="desc">遞減（新到舊）</option>
                        <option value="asc">遞增（舊到新）</option>
                    </select>
                </div>
            </div>
            <!-- 排序三兄弟 END -->
        </form>
        <!-- 搜尋 END-->
        <!-- 借閱狀況 START-->
        <table class="table mt-2">
            <thead>
                <tr>
                    <th scope="col">書籍編號</th>
                    <th scope="col">借閱書籍</th>
                    <th scope="col">借閱人名稱</th>
                    <th scope="col">預約日期</th>
                    <th scope="col">順位</th>
                    <th scope="col">狀況</th>
                    <th scope="col">功能操作</th>
                </tr>
            </thead>
            <tbody>
                @for (int x = 0; x < 10; x++)
                {
                    <tr>
                        <td class="align-middle">IJL25344153</td>
                        <td class="align-middle">持續買進</td>
                        <td class="align-middle">老王</td>
                        <td class="align-middle">2025-06-30</td>
                        <td class="align-middle">1</td>
                        <td class='text-bg-success align-middle'>等待</td>
                        <td><button type="button" class="btn btn-danger">通知</button></td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="container d-flex justify-content-center">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        <!-- 借閱狀況 END -->
    </div>
    <!-- 右邊的功能 END -->
</div>
<!-- 主內容 END -->