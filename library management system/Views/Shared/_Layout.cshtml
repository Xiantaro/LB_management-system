<!DOCTYPE html>
<html lang="zh-TW">
<head>
	<meta charset="utf-8" />
	<title>圖書館管理系統</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- Bootstrap 核心樣式 -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

	<!-- 主題樣式 -->
	<style>
		body {
			background-color: #E0E8D7; /* 柔和灰綠 */
			color: #235A32; /* 文字深綠 */
			margin: 0;
		}

		header {
			background-color: #2E7D32; /* 深綠 */
			color: white;
			padding: 1rem;
		}


		.nav-link {
			color: white;
			font-weight: bold;
			padding: 0.5rem 1rem;
			text-decoration: none;
		}

			.nav-link:hover {
				color: #F5F5DC; /* 米色 */
				background-color: #8C5B42; /* 棕色 */
				border-radius: 5px;
			}

		.accordion {
			background-color: #D0E0B8;
			padding: 10px;
			border-radius: 10px;
		}

		.accordion-button {
			background-color: #2E7D32;
			color: white;
			font-weight: bold;
			border-radius: 5px;
		}

			.accordion-button:not(.collapsed) {
				background-color: #8C5B42;
				color: white;
			}

		.nav-link {
			color: #235A32;
			padding-left: 1rem;
		}

			.nav-link:hover {
				color: #F5F5DC;
				background-color: #8C5B42;
				border-radius: 5px;
			}

		.sub-category {
			margin-top: 5px;
			margin-left: 15px;
		}

		footer {
			background-color: #2E7D32;
			color: #fff;
			padding: 1rem;
			text-align: center;
		}
	</style>
</head>
<body>
    <!-- 頁首 -->
    <header class="d-flex justify-content-between align-items-center">
        <div class="ms-3">
            <a href="/" class="text-white text-decoration-none fw-bold fs-4">📚 圖書館管理系統</a>
        </div>
        <nav class="me-3">

        </nav>
    </header>

    <!-- 各頁內容區塊 -->
    <div class="container-fluid">
        <div class="row">
            <aside class="col-2">
                <div class="accordion" id="sidebarAccordion">
                    <!-- 書籍管理 -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingBooks">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseBooks">
                                📚 書籍管理
                            </button>
                        </h2>
                        <div id="collapseBooks" class="accordion-collapse collapse show" data-bs-parent="#sidebarAccordion">
                            <div class="accordion-body">
                                <div class="sub-category">
                                    <a class="nav-link" href="#">書籍登錄</a>
                                    <a class="nav-link" href="#">書籍盤點</a>
                                    <a class="nav-link" href="#">書籍分類與標記</a>
                                    <a class="nav-link" href="#">書籍維護</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 借閱與歸還 -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingBorrow">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseBorrow">
                                📖 借閱與歸還
                            </button>
                        </h2>
                        <div id="collapseBorrow" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
                            <div class="accordion-body">
                                <div class="sub-category">
                                    <a class="nav-link" href="#" id="BorrowQuery">借閱查詢</a>
                                    <a class="nav-link" href="#" id="AppointmentQuery">預約管理</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- 讀者管理 -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingReaders">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseReaders">
                                👤 讀者管理
                            </button>
                        </h2>
                        <div id="collapseReaders" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
                            <div class="accordion-body">
                                <div class="sub-category">
                                    <a class="nav-link" href="#">讀者帳戶</a>
                                    <a class="nav-link" href="#">會員等級</a>
                                    <a class="nav-link" href="#">違規記錄</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 活動與推廣 -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingEvents">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseEvents">
                                📢 活動與推廣
                            </button>
                        </h2>
                        <div id="collapseEvents" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
                            <div class="accordion-body">
                                <div class="sub-category">
                                    <a class="nav-link" href="#">館內活動</a>
                                    <a class="nav-link" href="#">公告與推薦</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 系統管理 -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingSystem">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSystem">
                                🛠️ 系統管理
                            </button>
                        </h2>
                        <div id="collapseSystem" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
                            <div class="accordion-body">
                                <div class="sub-category">
                                    <a class="nav-link" href="#">帳號管理</a>
                                    <a class="nav-link" href="#">借閱規則設定</a>
                                    <a class="nav-link" href="#">館藏規則</a>
                                    <a class="nav-link" href="#">通知與公告管理</a>
                                    <a class="nav-link" href="#">資料備份與還原</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingSystem">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAnalysis">
                                🛠️ 數據分析
                            </button>
                        </h2>
                        <div id="collapseAnalysis" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
                            <div class="accordion-body">
                                <div class="sub-category">
                                    <a class="nav-link" href="#">借閱趨勢分析</a>
                                    <a class="nav-link" href="#">逾期率統計</a>
                                    <a class="nav-link" href="#">讀者借閱行為分析</a>
                                    <a class="nav-link" href="#">館藏使用率</a>
                                    <a class="nav-link" href="#">報表/匯出功能</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </aside>
            <!-- 右側：頁面主內容 -->
            <div class="col-10 py-2" id="content-panel">
                @RenderBody()
            </div>
        </div>
    </div>


    <!-- 頁尾 -->
    <footer>
        &copy; 2025 圖書館管理系統 — Powered by Bootstrap 5
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/js/Brow.js")"></script>
    @await RenderSectionAsync("Scripts", required: false) 
</body>
</html>