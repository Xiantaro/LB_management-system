<!-- 主內容 START -->
<div class="row mt-1">
    <div class="col">
        <!-- 搜尋 START-->
        <form id="borrowForm" method="post" asp-action="Query" class="d-flex justify-content-between align-items-end flex-wrap gap-3">
            <!-- 查詢表單欄位 -->
            <div class="d-flex flex-wrap gap-3">
                <div>
                    <label class="form-label mb-0">借閱編號：</label>
                    <input name="borrow_BorrowID" type="text" class="form-control form-control-sm" placeholder="All" />
                </div>
                <div>
                    <label class="form-label mb-0">借閱人ID：</label>
                    <input name="borrow_UserID" type="text" class="form-control form-control-sm" placeholder="All" />
                </div>
                <div>
                    <label class="form-label mb-0">書籍編號：</label>
                    <input name="borrow_bookNum" type="text" class="form-control form-control-sm" placeholder="All" />
                </div>

                <div>
                    <label class="form-label mb-0">借閱狀態：</label>
                    <select name="borrow_state" class="form-select form-select-sm">
                        <option value="">全部</option>
                        <option value="借出中">借出中</option>
                        <option value="已歸還">已歸還</option>
                        <option value="逾期未還">逾期未還</option>
                    </select>
                </div>
                <div>
                    <label for="borrow_initDate" class="form-label mb-0">預約日期範圍</label>
                    <input name="borrow_initDate" type="date" class="form-control form-control-sm"/>
                </div>
                <div>
                    <label for="borrow_lastDate" class="form-label mb-0">至</label>
                    <input name="borrow_lastDate" class="form-control form-control-sm" type="date"/>
                </div>
                <div class="align-self-end">
                    <button id="borrow_select" type="button" class="btn btn-primary btn-sm">查詢</button>
                </div>
                <div class="align-self-end">
                    <button id="borrow_clear" type="button" class="btn-lg btn-close btn-light"></button>
                </div>
            </div>
            <!-- 排序兄弟 START-->
            <div class="d-flex flex-wrap gap-3">
                <div>
                    <label for="borrow_perPage" class="form-label mb-0">顯示數量：</label>
                    <select id="borrow_perPage" name="borrow_perPage" class="form-select form-select-sm">
                        <option value="10">10</option>
                        <option value="20">20</option>
                        <option value="30">30</option>
                    </select>
                </div>
                <!-- 排序依據 -->
                <div>
                    <label for="borrow_date" class="form-label mb-0">排序依據：</label>
                    <select id="borrow_date" name="borrow_date" class="form-select form-select-sm" name="orderBy">
                        <option value="borrowDate">借出日期</option>
                        <option value="returnDate">實際還書日</option>
                    </select>
                </div>
                <!-- 排序方向 -->
                <div>
                    <label for="borrow_orderDate" class="form-label mb-0">排序方向：</label>
                    <select id="borrow_orderDate" name="borrow_orderDate" class="form-select form-select-sm" name="sortDir">
                        <option value="desc">遞減（新到舊）</option>
                        <option value="asc">遞增（舊到新）</option>
                    </select>
                </div>
            </div>
            <!-- 排序兄弟 END -->
        </form>
        <!-- 搜尋 END-->
        <!-- 借閱狀況 START-->
        <div id="BorrowContent">
        </div>
        <!-- 借閱狀況 END -->
    </div>
    <!-- 右邊的功能 END -->
</div>
<!-- 主內容 END -->